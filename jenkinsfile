pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    dockerImage = docker.build("SireeshaAdireddi/myapp:${env.BUILD_ID}")
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    dockerImage.inside {
                        bat 'echo "Running tests..."'
                        // Add your test commands here
                    }
                }
            }
        }
         stage('Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    bat 'docker run -d --name myapp -p 8080:8080 SireeshaAdireddi/myapp:${env.BUILD_ID}'
                }
            }
        }
    }
}
