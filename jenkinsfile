pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    bat "docker build -t sireeshaadireddi/nodejs:${env.BUILD_ID} ."
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    bat """
                        docker run --rm sireeshaadireddi/nodejs:${env.BUILD_ID} echo "Running tests..."
                        # Add your test commands here
                    """
                }
            }
        }
        stage('Push') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'SireeshaAdireddi', passwordVariable: 'Siridocker@123')]) {
                        bat """
                            echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USERNAME --password-stdin
                            docker push sireeshaadireddi/nodejs:${env.BUILD_ID}
                            docker logout
                        """
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    bat "docker run -d --name nodejs -p 8080:8080 sireeshaadireddi/nodejs:${env.BUILD_ID}"
                }
            }
        }
    }
}